<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">


    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/dimen15dp"

        android:background="@color/white"
        app:cardCornerRadius="8dp">

        <LinearLayout

            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:weightSum="3">

            <LinearLayout
                android:layout_width="@dimen/dimen0dp"
                android:layout_height="match_parent"
                android:layout_weight="1">

                <ImageView
                    android:id="@+id/imgProduct"
                    android:scaleType="centerCrop"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/dimen150dp"
                    android:src="@drawable/pd_1" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="@dimen/dimen0dp"
                android:layout_height="match_parent"
                android:layout_weight="2"
                android:layout_marginLeft="@dimen/dimen10dp"
                android:orientation="vertical">

                <com.onlinemarket.integration_layer.widgets.textview.MainHeadNameTextView
                    android:layout_width="match_parent"
            
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/dimen20dp"
                    android:text="Product Name"
                    android:id="@+id/txtProductName"

                    android:textSize="@dimen/dimen15sp"
                    android:textColor="@color/black" />

                <com.onlinemarket.integration_layer.widgets.textview.CustomTextViewRegular
                    android:layout_width="match_parent"
                    android:id="@+id/txtProductDes"

                    android:layout_height="wrap_content"
                    android:text="Product Description"
                    android:textColor="@color/grey"
                    android:textSize="@dimen/dimen12sp" />

                <com.onlinemarket.integration_layer.widgets.textview.MainHeadNameTextView
            
                    android:layout_width="match_parent"
                    android:gravity="center_vertical|bottom"
                    android:layout_marginBottom="@dimen/dimen20dp"
                    android:layout_height="match_parent"
                    android:text="$00"
                    android:id="@+id/txtProductCost"
                    android:textColor="@color/black"
                    android:textSize="@dimen/dimen14sp" />
            </LinearLayout>


        </LinearLayout>
    </androidx.cardview.widget.CardView>


</LinearLayout>
