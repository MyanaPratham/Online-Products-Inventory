<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <LinearLayout

        android:layout_width="match_parent"
        android:layout_height="@dimen/dimen80dp"
        android:background="@drawable/border_shadow_line">

        <LinearLayout

            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal"
            android:weightSum="2">

            <LinearLayout
                android:layout_width="@dimen/dimen0dp"
                android:layout_height="match_parent"
                android:layout_weight="1.4"
                android:gravity="center_vertical">

                <com.onlinemarket.integration_layer.widgets.edittext.CustomEditText

                    android:layout_width="match_parent"
                    android:layout_height="@dimen/dimen31dp"
                    android:background="@drawable/primary_border_stroke"
                    android:drawableRight="@drawable/ic_gps"
                   android:layout_marginLeft="@dimen/dimen10dp"
                    android:id="@+id/editSearch"
                    android:hint="Search Here"
                    android:paddingLeft="@dimen/dimen10dp"

                    android:paddingRight="@dimen/dimen10dp"
                    android:textSize="@dimen/dimen12sp" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="@dimen/dimen0dp"
                android:layout_height="match_parent"
                android:layout_weight=".6"
                android:gravity="center">


                <com.onlinemarket.integration_layer.widgets.textview.CustomTextViewRegular
                    android:layout_width="@dimen/dimen100dp"
                    android:layout_height="wrap_content"
                    android:background="@color/themeBGcolor"
                    android:drawableLeft="@drawable/ic_filt"
                    android:drawablePadding="@dimen/dimen15dp"

                    android:padding="@dimen/dimen5dp"
                    android:text="Filter"
                    android:textColor="@color/black" />
            </LinearLayout>
        </LinearLayout>

    </LinearLayout>

</LinearLayout>
